extends layout.pug

block content

  section.section-padding
    .container
      .row.mb-4
        .col-12.text-start
          h1 Товары
  section.products-content
    .container
      .row.row-cols-2.row-cols-md-3.row-cols-lg-4.g-4
        each item in products
          .col
            include product-card.pug

  section.pegintation.section-padding
    .container
      .row
        .col-12
          nav(aria-label='Page navigation example')
            ul.pagination.justify-content-center
              li.page-item.disabled
                a.page-link(href='#' tabindex='-1') Назад
              li.page-item
                a.page-link(href='#') 1
              li.page-item
                a.page-link(href='#') 2
              li.page-item
                a.page-link(href='#') 3
              li.page-item
                a.page-link(href='#') Вперед

